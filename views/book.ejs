<%- include ('blocks/header.ejs') %>
<div class="comment-form">
    <form class="comment-inputs" name="comment" method="POST" action="/book">
        <div id="login_main_label" style="margin: 0">Добавьте комментарий</div>
        <input id="guest_name" class="input_form" placeholder="Введите имя" style="margin: 0"
               type="text" name="guest_name" required="required">
        <p></p>
        <input id="commentText" class="input_form" placeholder="Введите ваш комментарий" style="margin: 0; height: 70px"
               type="text" name="commentText" required="required">
        <br>
        <input style="margin: 20px 0 10px 0" class="input_button" type="submit" name="submit_btn" value="Отправить">
    </form>
</div>
<div class="comments-list">
    <% for (const i in comments.reverse()) { %>
        <div class="comment-box">
            <div class="my-flex-box" style="justify-content: space-between">
                <div style="font-weight: bold"><%= comments[i].name %></div>
                <div style="font-size: 14px; color: darkgray">
                    <%= comments[i].commentDate.getDate() %>.
                    <%=comments[i].commentDate.getMonth()+1%>.
                    <%= comments[i].commentDate.getFullYear() %>
                </div>
            </div>
            <div style="padding: 10px 0 0 0">
                <%= comments[i].commentText %>
            </div>
        </div>
    <% } %>
</div>
<div style="text-align: right; margin: 30px 40px 30px 0; font-size: 16px; color: black">
    Количество просмотров: <%= numb[0].kol %>
</div>
</body>

</html>