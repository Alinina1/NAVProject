<!DOCTYPE html>
<html>
<head>
    <title>NAV</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="css/styles.css"/>
    <script src="https://lidrekon.ru/slep/js/jquery.js"></script>
    <script src="https://lidrekon.ru/slep/js/uhpv-full.min.js"></script>
</head>

<body>
<!-- Yandex.Metrika counter -->
<script type="text/javascript" >
    (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
        m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
    (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

    ym(86928268, "init", {
        clickmap:true,
        trackLinks:true,
        accurateTrackBounce:true
    });
</script>
<%- include ('blocks/header.ejs') %>
<div class="memo-label" style="font-size: 25px; ">
    Новости
</div>
<% if(isAuth){ %>
    <div>Добавить новость</div>
    <form name="news" method="POST" action="/news">
        <input class="input_form" placeholder="Введите текст новости" style="margin: 0" name="newsText" required="required">
        <input style="margin: 20px 0 10px 0" class="input_button" type="submit" name="submit_btn" value="Отправить">
    </form>
<% } %>
<div class="comments-list">
    <% for (const i in news.reverse()) { %>
    <div class="my-flex-box" style="align-items: center">
        <div style="width: 30%">
            <img src="img/news.png" width="30%">
        </div>
        <div class="comment-box" style="width: 70%">
            <%= news[i].newsText %>
        </div>
        <% if(isAuth){ %>
            <div class="input_button" style="width: 10%" onclick="">Удалить</div>
        <% } %>
    </div>
    <% } %>
</div>
</body>

</html>